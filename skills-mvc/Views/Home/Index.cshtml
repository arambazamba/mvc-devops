@model IEnumerable<Skill>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Skills</h1>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <colgroup>
                <col style="width: 10%" />
                <col style="width: 10%" />
            </colgroup>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody id="tblBody">
                @foreach (var skill in Model)
                {
                    <tr style="cursor: pointer" id="rowid-@skill.ID">
                        <td> @skill.ID </td>
                        <td> @skill.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a id="btnAdd" role="button" href="@Url.Action("AddSkill", "Home")">Add Skill</a>
    </div>
</div>
